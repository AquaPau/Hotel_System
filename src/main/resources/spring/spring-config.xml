<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <import resource="datebase-config.xml"/>

    <bean id="user" class="com.epam.hotel.model.User" scope="prototype">
    </bean>
    <bean id="room" class="com.epam.hotel.model.Room" scope="prototype">
    </bean>
    <bean id="request" class="com.epam.hotel.model.Request" scope="prototype">
    </bean>


    <bean id="userDao" class="com.epam.hotel.daos.UserDaoTemplateImpl">
        <constructor-arg ref="jdbcTemplate"/>
    </bean>

    <bean id="RoomDao" class="com.epam.hotel.daos.RoomDaoTemplateImpl">
        <constructor-arg ref="jdbcTemplate"/>
    </bean>



</beans>